<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1>
                <%= title %>
            </h1>

            <form class="form" method="POST">
                <input type="hidden" name="id" value="<%= contact._id %>">
                <div class="form-group">
                    <label for="fNameTextField">First Name</label>
                    <input type="text" class="form-control" id="fNameTextField" placeholder="Enter first name" name="firstName" value="<%= contact.firstName %>" required>
                </div>

                <div class="form-group">
                    <label for="lNameTextField">Last Name</label>
                    <input type="text" class="form-control" id="lNameTextField" placeholder="Enter last name" name="lastName" value="<%= contact.lastName %>" required>
                </div>

                <div class="form-group">
                    <label for="companyTextField">Company</label>
                    <input type="text" class="form-control" id="companyTextField" placeholder="Enter company name" name="companyName" value="<%= contact.companyName %>" required>
                </div>

                <div class="form-group">
                    <label for="emailAddressTextArea">Email Address</label>
                    <input type="text" class="form-control" id="emailAddressTextArea" placeholder="Enter email address" name="emailAddress" value="<%= contact.emailAddress %>" required>
                    </input>
                </div>

                <div class="form-group">
                    <label for="phoneNumberTextField">Phone Number</label>
                    <input type="number" class="form-control" id="phoneNumberTextField" placeholder="Enter phone number" name="phoneNumber" value="<%= contact.phoneNumber %>" required>
                </div>

                <button id="submitBtn" class="btn btn-default" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                <a id="cancelBtn" href="/business-list" class="btn btn-default">
                    <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>